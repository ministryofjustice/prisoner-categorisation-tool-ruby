<%= form_for @case do |f| %>
  <%= hidden_field_tag :next_step, @next_step %>
  <div class="govuk-form-group">
    <fieldset class="govuk-fieldset">
      <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
        <h1 class="govuk-fieldset__heading">
          Do you agree with this categorisation?
        </h1>
      </legend>
      <div class="govuk-radios govuk-radios--conditional" data-module="radios">
        <div class="govuk-radios__item">
          <input class="govuk-radios__input" id="risk-rating-conditional-1" name="risk-rating" type="radio" value="yes" data-aria-controls="conditional-risk-rating-conditional-1">
          <label class="govuk-label govuk-radios__label" for="risk-rating-conditional-1">
            Yes
          </label>
        </div>
        <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-risk-rating-conditional-1">
          <div class="govuk-form-group">
            <label class="govuk-label" for="warrants-b-yes">
              Do you believe that this higher risk warrants category B incaceration?
            </label>
            <input class="govuk-input govuk-!-width-one-third" id="warrants-b-yes" name="warrants-b-yes" type="yes">
          </div>
        </div>
        <div class="govuk-radios__item">
          <input class="govuk-radios__input" id="risk-rating-conditional-2" name="risk-rating" type="radio" value="phone" data-aria-controls="conditional-risk-rating-conditional-2">
          <label class="govuk-label govuk-radios__label" for="risk-rating-conditional-2">
            No
          </label>
        </div>
      </div>
    </fieldset>
  </div>
      <%= render partial: "shared/textarea", locals: { 
      purpose: "justify-categorisation", 
      text: "Why do you think this is the right decision?",
      hint: "Please explain why you either agree or disagree with this assessment"
      } %>
  <%= f.submit 'Next', class: 'govuk-button' %>
<% end %>