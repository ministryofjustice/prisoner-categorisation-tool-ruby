<table class="govuk-table">
<thead class="govuk-table__head">
  <tr class="govuk-table__row">
    <th class="govuk-table__header" scope="col">Name</th>
    <th class="govuk-table__header" scope="col">NOMIS ID</th>
    <th class="govuk-table__header" scope="col">Status</th>
    <th class="govuk-table__header" scope="col">Must be categorised by:</th>
    <th class="govuk-table__header" scope="col"></th>
  </tr>
</thead>
  <tbody class="govuk-table__body">
    <% @cases.each do |c| %>
    <% if @role == "security_department" %>
      <% path = case_security_path(c) %>
    <% elsif @role == "supervisor"%>
      <% path = case_supervisor_path(c) %>
    <% else %>
      <% path = section_1_case_path(c) %>
    <% end %>
      <%= render partial: "shared/case", locals: {c: c, path: path} %>
    <% end %>
  </tbody>
</table>
